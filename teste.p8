__lua__
--vai acontecer 1 vez ao iniciar
function _init()
	--position=63
	
	--as chaves sao chamada de table
	player={
		x=63, --virgula em toda linha
		y=63, --nao precisa na ultima
		fx=false, --fara o sprite espelhar
		fy=false,
		sp=2 --esse alteera o sprite
		}
end

--faz coisas back_ending
--e chamado a cada frame
function _update()
 if btn(➡️) then
 	player.x+=1
 	player.fx=false
 	player.fy=false --esse entendi
 	player.sp=2
 end
	if btn(⬅️) then
		player.x-=1
		player.fx=true
		player.fy=false
		player.sp=2
	end
	--posicao do y--
	if btn(⬆️) then
 	player.y-=1
 	player.sp=18
 	player.fy=false
 end
	if btn(⬇️) then
		player.y+=1
		player.sp=18
		player.fy=true
	end
end

--faz coisas frond_ending
--e atualizado de ser atulizado
function _draw()
	cls() --cls limpa a tela

	spr(player.sp,player.x,player.y,1,1,player.fx,player.fy)
	--numero do sprite, possicao x e y, altura e largura e possicao dele
	--eu nao entedi como mas aqui o sprite espelha
end

