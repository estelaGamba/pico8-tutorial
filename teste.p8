__lua__
--vai acontecer 1 vez ao iniciar
function _init()
	position=63
	
	--as chaves sao chamada de table
	player={
		x=63, --virgula em toda linha
		y=63 --nao precisa na ultima
		}
end

--faz coisas back_ending
--e chamado a cada frame
function _update()
 if btn(➡️) then
 	player.x+=1
 end
	if btn(⬅️) then
		player.x-=1
	end
	
	if btn(⬆️) then
 	player.y-=1
 end
	if btn(⬇️) then
		player.y+=1
	end
end

--faz coisas frond_ending
--e atualizado de de ser atulizado
function _draw()
	cls() --cls limpa a tela

	spr(1,player.x,player.y)
	--numero do sprite e possicoes
end

